<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hariharansivakumar.tike.WalletFragment">

<TextView
    android:id="@+id/balanceLabel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Balance"
    android:textSize="30dp"
    android:textStyle="bold" />

<TextView
android:id="@+id/balance"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignTop="@+id/balanceLabel"
android:layout_below="@+id/balanceLabel"
android:layout_marginTop="50dp"
android:layout_weight="1"
android:text="0"
android:textSize="35dp" />

<Button
android:id="@+id/showbalance"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@id/balance"
android:text="Show Balanace" />

<TextView
android:id="@+id/addmoney"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_below="@+id/showbalance"
android:layout_marginTop="50dp"
android:layout_weight="1"
android:text="Add Money to Wallet"
android:textSize="20sp" />


    </RelativeLayout>
